source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.2'

# Use sqlite3 as the database for Active Record
gem 'sqlite3'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

#add jquery-ui since it is no longer included in jquery-rails
gem 'jquery-ui-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

#fix problems wiht AJAX caused by turbolinks
gem 'jquery-turbolinks'

#adding has_scope for filtering in products search
gem 'has_scope'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

# Using devise gem for passwords and user maintenance
gem 'devise'

#using paginate
gem 'will_paginate', '3.0.3'
gem 'bootstrap-will_paginate', '0.0.6'

#to validate a phone number
gem 'validates_phone_number'

#to debug mailer issues
gem 'letter_opener', :group=> :development

#using bootstrap
gem 'bootstrap-sass', '2.1'
gem 'less-rails-bootstrap'

#using rubyracer to avoid ruby version errors
gem 'therubyracer'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

#using geocoder for location
gem 'geocoder'

#using haml
gem 'haml'
gem 'haml-rails'

#nokogiri adds a library for HTML scraping
gem 'nokogiri'

#addingn mechanize to help with forms on scraping
gem 'mechanize'

#crack gem for parsing
gem 'crack'

#adding rest-client and OpenURIfor webpage retrieval
gem 'rest-client'

#i18n country select used because country select is no longer maintained
gem 'i18n_country_select'

#using populator and/or faker to create fake data
gem 'populator'
gem 'faker'

#using dragonfly to manage uploaded files and images
gem 'dragonfly', '~> 1.0.4'

#enabling rack cache in production.rb needs this(done for dragonfly):
gem 'rack-cache'

#install rmagick to use imagemagick for dragonfly stuff
gem 'rmagick', '2.13.2'

#using jquery file upload instead of dragonfly
#gem "jquery-fileupload-rails"

#Using paperclip to upload files now
gem "paperclip", "~> 4.1"

