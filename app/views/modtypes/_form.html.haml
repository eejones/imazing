= form_for @modtype do |f|
  - if @modtype.errors.any?
    #error_explanation
      %h2= "#{pluralize(@modtype.errors.count, "error")} prohibited this modtype from being saved:"
      %ul
        - @modtype.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
