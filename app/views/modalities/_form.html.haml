= form_for @modality do |f|
  - if @modality.errors.any?
    #error_explanation
      %h2= "#{pluralize(@modality.errors.count, "error")} prohibited this modality from being saved:"
      %ul
        - @modality.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
