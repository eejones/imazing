= form_for @transaction do |f|
  - if @transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - @transaction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :prefremovalmethod
    = f.text_field :prefremovalmethod
  .field
    = f.label :sellremovalcost
    = f.text_field :sellremovalcost
  .field
    = f.label :sellshipcost
    = f.text_field :sellshipcost
  .field
    = f.label :selldate
    = f.time_select :selldate
  .field
    = f.label :selluser
    = f.number_field :selluser
  .field
    = f.label :buyuser
    = f.number_field :buyuser
  .actions
    = f.submit 'Save'
